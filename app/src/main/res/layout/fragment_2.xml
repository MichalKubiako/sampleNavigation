<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E5A4B"
    tools:context=".Fragment2">

    <Button
        android:id="@+id/button_f2_to_bm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Fragment 2"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/button_f2_to_bm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/button_f2_to_bm_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_f2_to_bm" />

</androidx.constraintlayout.widget.ConstraintLayout>